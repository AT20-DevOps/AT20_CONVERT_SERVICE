
pipeline{
    agent any
    stages{
        stage("Test"){
            agent { docker 'node:18-alpine3.16' }
            steps{
                //sh 'npm version'
                //sh 'ls -la'
                sh 'npm install --save-dev ts-jest'
                sh 'npm install --save-dev @types/jest'
                sh 'npx jest'
            }
            post {
                always {
                    archiveArtifacts artifacts: 'test/report/report.html', followSymlinks: false
                }
            }
        }
        stage ('Package'){
            docker build -t ato20_convert_service .
        }
        stage ('Publish'){
            //docker login
            //docker tag
            //docker push
        }
    }
}