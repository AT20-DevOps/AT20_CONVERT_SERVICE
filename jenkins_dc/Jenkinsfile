pipeline{
    agent any
    stages {
        stage("Test"){
            agent { docker 'node:18-alpine3.16'}
            steps {
                sh 'npm install'
                sh 'npm install --save-dev ts-jest'
                sh 'npm i --save-dev @types/jest'
                sh 'apk add --update ffmpeg'
                sh 'npm run test'
            }
        }
    }
}