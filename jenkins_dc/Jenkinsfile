pipeline{
    agent any
    environment {
        DOCKER_PASS = credentials('docker_pass')
    }
    stages {
        stage("Test"){
            agent { docker 'node:18-alpine3.16'}
            steps {
                sh 'npm install'
                sh 'npm i --save-dev @types/jest'
                sh 'npm run test'
            }
            post{
                always{
                    archiveArtifacts artifacts: 'test/report/report.html', followSymlinks: false
                }
            }
        }
        stage('Package'){
            steps{
                sh'docker build -t at20_convert_service .'
            }
        }
        stage('Publish'){
            steps{
                sh 'docker login -u daniish77 -p ${DOCKER_PASS}'
                sh 'docker tag at20_convert_service daniish77/at20_convert_service'
                sh 'docker push daniish77/at20_convert_service'
            }

        }
    }
}